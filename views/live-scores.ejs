                    font-weight: bold;
                }
                .score-big {
                    font-size: 2.5rem;
                    font-weight: bold;
                    text-align: center;
                }
                .view-details-btn:focus {
                    box-shadow: none;
                }
                .fetch-updates-btn {
                    font-size: 0.8rem;
                    padding: 0.25rem 0.5rem;
                }
                .fetch-updates-btn.loading {
                    opacity: 0.7;
                    pointer-events: none;
                }
                .fetch-updates-btn.loading i {
                    animation: spin 1s linear infinite;
                }
                @keyframes spin {
                    0% { transform: rotate(0deg); }
                    100% { transform: rotate(360deg); }
                }
            `;
            document.head.appendChild(styleEl);
            
            // Add click handlers for fetch updates buttons
            document.addEventListener('click', function(e) {
                if (e.target.closest('.fetch-updates-btn')) {
                    const btn = e.target.closest('.fetch-updates-btn');
                    const matchId = btn.getAttribute('data-match-id');
                    
                    // Add loading state
                    btn.classList.add('loading');
                    const originalText = btn.innerHTML;
                    btn.innerHTML = '<i class="bi bi-arrow-repeat"></i> Fetching...';
                    
                    // Call API to fetch web updates
                    fetch(`/api/matches/${matchId}/web-updates`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Get the container for updates
                                const detailsContainer = btn.closest('.match-details');
                                const updatesSection = detailsContainer.querySelector('.latest-updates-content');
                                
                                // Update the match object with new data
                                const card = btn.closest('.score-card');
                                const currentMatch = getMatchData(card);
                                currentMatch.updates = data.data.updates;
                                
                                // Update the UI
                                updatesSection.innerHTML = getMatchUpdates(currentMatch);
                                
                                // Show success message
                                showUpdateNotification(data.message, 'success');
                            } else {
                                showUpdateNotification(data.error || 'Failed to fetch updates', 'danger');
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching updates:', error);
                            showUpdateNotification('Error fetching updates', 'danger');
                        })
                        .finally(() => {
                            // Remove loading state
                            btn.classList.remove('loading');
                            btn.innerHTML = originalText;
                        });
                }
            });
            
            // Function to get match data from a card
            function getMatchData(card) {
                const matchId = card.getAttribute('data-match-id');
                
                // Extract team names properly
                const homeTeam = card.querySelector('.team-name:first-of-type')?.textContent || 'Unknown';
                const awayTeam = card.querySelector('.team-name:last-of-type')?.textContent || 'Unknown';
                
                // Extract scores - need to handle different sport formats
                let homeScore = 0;
                let awayScore = 0;
                let score = null;
                
                // Try to find score displays
                const scoreDisplays = card.querySelectorAll('.score-display');
                if (scoreDisplays.length >= 2) {
                    // Most sports have separate home and away score elements
                    homeScore = parseInt(scoreDisplays[0].textContent.trim()) || 0;
                    awayScore = parseInt(scoreDisplays[1].textContent.trim()) || 0;
                    
                    // Check if we have detailed cricket scores
                    const homeDetail = card.querySelector('.team-name:first-of-type + div .score-display')?.textContent.trim();
                    const awayDetail = card.querySelector('.team-name:last-of-type + div .score-display')?.textContent.trim();
                    const homeOvers = card.querySelector('.team-name:first-of-type + div small')?.textContent.trim().replace(/[()]/g, '');
                    const awayOvers = card.querySelector('.team-name:last-of-type + div small')?.textContent.trim().replace(/[()]/g, '');
                    
                    if (homeDetail || awayDetail) {
                        score = {
                            home_detail: homeDetail || '',
                            away_detail: awayDetail || '',
                            home_overs: homeOvers || '',
                            away_overs: awayOvers || ''
                        };
                    }
                } else if (scoreDisplays.length === 1) {
                    // Some might have a single element with format "X - Y"
                    const scoreParts = scoreDisplays[0].textContent.trim().split('-');
                    if (scoreParts.length === 2) {
                        homeScore = parseInt(scoreParts[0].trim()) || 0;
                        awayScore = parseInt(scoreParts[1].trim()) || 0;
                    } else {
                        homeScore = parseInt(scoreDisplays[0].textContent.trim()) || 0;
                    }
                }
                
                // Get match status
                const status = card.classList.contains('live') ? 'live' : 
                              card.querySelector('.match-status')?.textContent.toLowerCase() || 'unknown';
                
                // Get match category if available
                const category = card.querySelector('.tournament-name')?.getAttribute('data-category') || '';
                
                // Create base match object
                const matchData = {
                    _id: matchId,
                    homeTeam,
                    awayTeam,
                    homeScore,
                    awayScore,
                    status,
                    category
                };
                
                // Add detailed score if available
                if (score) {
                    matchData.score = score;
                }
                
                // Extract any stats if present (for cricket matches)
                const statsTable = card.querySelector('.match-details table');
                if (statsTable && category.toLowerCase() === 'cricket') {
                    const rows = statsTable.querySelectorAll('tbody tr');
                    if (rows.length >= 2) {
                        const homeStats = rows[0].querySelectorAll('td');
                        const awayStats = rows[1].querySelectorAll('td');
                        
                        if (homeStats.length >= 7 && awayStats.length >= 7) {
                            matchData.stats = {
                                home: {
                                    runs: parseInt(homeStats[1].textContent) || 0,
                                    wickets: parseInt(homeStats[2].textContent) || 0,
                                    overs: homeStats[3].textContent.trim(),
                                    runRate: parseFloat(homeStats[4].textContent) || 0,
                                    fours: parseInt(homeStats[5].textContent) || 0,
                                    sixes: parseInt(homeStats[6].textContent) || 0
                                },
                                away: {
                                    runs: parseInt(awayStats[1].textContent) || 0,
                                    wickets: parseInt(awayStats[2].textContent) || 0,
                                    overs: awayStats[3].textContent.trim(),
                                    runRate: parseFloat(awayStats[4].textContent) || 0,
                                    fours: parseInt(awayStats[5].textContent) || 0,
                                    sixes: parseInt(awayStats[6].textContent) || 0
                                }
                            };
                        }
                    }
                }
                
                console.log('Extracted match data:', matchData);
                return matchData;
            }
            
            // Show a notification message
            function showUpdateNotification(message, type) {
                const notification = document.createElement('div');
                notification.className = `alert alert-${type} update-notification`;
                notification.innerHTML = message;
                notification.style.position = 'fixed';
                notification.style.top = '20px';
                notification.style.right = '20px';
                notification.style.zIndex = '9999';
                notification.style.maxWidth = '300px';
                
                document.body.appendChild(notification);
                
                // Remove after 3 seconds
                setTimeout(() => {
                    notification.style.opacity = '0';
                    notification.style.transition = 'opacity 0.5s';
                    setTimeout(() => {
                        document.body.removeChild(notification);
                    }, 500);
                }, 3000);
            }
            
            // Auto-refresh live match details when expanded
            setInterval(() => {
                document.querySelectorAll('.score-card.live').forEach(card => {
                    const detailsSection = card.querySelector('.match-details');
                    const matchId = card.getAttribute('data-match-id');
                    
                    // Only refresh if details are currently expanded
                    if (detailsSection && detailsSection.style.display === 'block' && matchId) {
                        fetchMatchDetails(matchId, detailsSection);
                    }
                });
            }, 30000); // Every 30 seconds
        });
