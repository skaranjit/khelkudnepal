<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Khelkud Nepal</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', { active: 'dashboard' }) %>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="button" class="btn btn-sm btn-outline-secondary" id="refresh-stats">
                <i class="bi bi-arrow-repeat"></i> Refresh
              </button>
              <button type="button" class="btn btn-sm btn-outline-secondary" id="export-stats">
                <i class="bi bi-download"></i> Export
              </button>
            </div>
          </div>
        </div>

        <!-- Dashboard stats -->
        <div class="row mb-4">
          <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5 class="card-title">Total Articles</h5>
                <h2 class="card-text" id="total-articles">--</h2>
                <small class="text-white-50">Articles in database</small>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
              <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h2 class="card-text" id="total-users">--</h2>
                <small class="text-white-50">Registered users</small>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card text-white bg-info">
              <div class="card-body">
                <h5 class="card-title">Subscribers</h5>
                <h2 class="card-text" id="total-subscribers">--</h2>
                <small class="text-white-50">Newsletter subscribers</small>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
              <div class="card-body">
                <h5 class="card-title">Page Views</h5>
                <h2 class="card-text" id="total-views">--</h2>
                <small class="text-white-50">Total article views</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent content -->
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Articles</h5>
                <a href="/admin/news" class="btn btn-sm btn-outline-primary">View All</a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Date</th>
                        <th>Views</th>
                      </tr>
                    </thead>
                    <tbody id="recent-articles">
                      <tr>
                        <td colspan="4" class="text-center">Loading...</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Subscribers</h5>
                <a href="/admin/subscriptions" class="btn btn-sm btn-outline-primary">View All</a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Email</th>
                        <th>Frequency</th>
                        <th>Date</th>
                      </tr>
                    </thead>
                    <tbody id="recent-subscribers">
                      <tr>
                        <td colspan="3" class="text-center">Loading...</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick actions -->
        <div class="row">
          <div class="col-md-12 mb-4">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3 mb-2">
                    <a href="/admin/news/create" class="btn btn-primary w-100">
                      <i class="bi bi-file-earmark-plus"></i> Create Article
                    </a>
                  </div>
                  <div class="col-md-3 mb-2">
                    <a href="#" class="btn btn-success w-100" id="fetch-news">
                      <i class="bi bi-cloud-download"></i> Fetch News
                    </a>
                  </div>
                  <div class="col-md-3 mb-2">
                    <a href="/admin/users" class="btn btn-info text-white w-100">
                      <i class="bi bi-people"></i> Manage Users
                    </a>
                  </div>
                  <div class="col-md-3 mb-2">
                    <a href="/admin/settings" class="btn btn-secondary w-100">
                      <i class="bi bi-gear"></i> Settings
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/admin-dashboard.js"></script>
</body>
</html> 